SColor getNeonColor(u8 team, u8 darkness)
{
	u8 color_type = 0;
	ClientVars@ vars = getVars();
	if (vars !is null)
	{
		color_type = vars.colorblind_type;
	}

	if (team <= 6)
		return colors[color_type][team][darkness];
	else
		return default_colors[darkness];
}